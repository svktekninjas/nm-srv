# Build Configuration
JAVA_VERSION=                 # Java version to use (e.g., 17)
MAVEN_CLI_OPTS=               # Maven command line options (e.g., --batch-mode --errors --fail-at-end --show-version)
MAVEN_GOALS=                  # Maven goals to execute (e.g., clean verify)

# Docker Configuration
DOCKER_IMAGE_NAME=            # Name for the Docker image (e.g., naming-server-service)
DOCKER_FILE_PATH=             # Path to the Dockerfile (e.g., ./naming-server-service/Dockerfile)

# Workflow Control
ENABLE_SONAR_SCAN=            # Flag to enable/disable SonarQube scanning (true/false)
ENABLE_DEPENDENCY_CHECK=      # Flag to enable/disable dependency vulnerability scanning (true/false)
ENABLE_DOCKER_SCAN=           # Flag to enable/disable Docker image scanning (true/false)
FAIL_ON_VULNERABILITY=        # Whether to fail the build on finding vulnerabilities (true/false)

# Versioning
VERSION_STRATEGY=             # How to version the Docker image (e.g., git-sha, semantic, latest)
MAIN_BRANCH=                  # Name of the main branch (usually 'main' or 'master')

# AWS Configuration
AWS_REGION=                   # AWS region where resources are deployed (default: us-east-1)

# ECR Configuration
ECR_REPOSITORY_URI=           # Full URI of the ECR repository (e.g., 940482440184.dkr.ecr.us-east-1.amazonaws.com/test)

# SonarQube Configuration
SONAR_PROJECT_KEY=            # Project key in SonarCloud/SonarQube
SONAR_HOST_URL=               # URL of SonarQube server (if self-hosted) or https://sonarcloud.io